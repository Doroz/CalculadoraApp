<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usuario.calculadoraapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#a69f9f">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="C"
            android:id="@+id/botaoClear"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#98c1e5"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:id="@+id/botaoSomar"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#e7ad49"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="7"
            android:id="@+id/botao7"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="8"
            android:id="@+id/botao8"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="9"
            android:id="@+id/botao9"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:id="@+id/botaoSubtrair"
            android:layout_row="1"
            android:layout_column="3"
            android:background="#e7ad49"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="4"
            android:id="@+id/botao4"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="5"
            android:id="@+id/botao5"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="6"
            android:id="@+id/botao6"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="x"
            android:id="@+id/botaoMultiplicar"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#e7ad49"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/botao1"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/botao2"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/botao3"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="/"
            android:id="@+id/botaoDividir"
            android:layout_row="3"
            android:layout_column="3"
            android:background="#e7ad49"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:id="@+id/botao0"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="."
            android:id="@+id/botaoPonto"
            android:layout_row="4"
            android:layout_column="2"
            android:background="#98c1e5"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="="
            android:id="@+id/botaoIgual"
            android:layout_row="4"
            android:layout_column="3"
            android:background="#98c1e5"
            android:onClick="clicaBotao"/>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="43dp"
        android:id="@+id/campoResultado"
        android:layout_above="@+id/gridLayout"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:textColor="@color/button_material_light" />
</RelativeLayout>
